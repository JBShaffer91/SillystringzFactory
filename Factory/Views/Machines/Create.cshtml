@model Factory.Models.Machine
@using Factory.Models
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Machine</h1>

<form asp-action="Create">
  <div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label for="SelectedEngineerId" class="control-label">Select Engineers</label>
    <select id="SelectedEngineerId" name="SelectedEngineerId" asp-items="ViewBag.Engineers" class="form-control"></select>
  </div>
  <div class="form-group">
    <input type="submit" value="Create" class="btn btn-primary" />
  </div>
</form>
