@model IEnumerable<Factory.Models.Engineer>

<h2>Engineers</h2>
<p>
    <a href="@Url.Action("Create")">Create New Engineer</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>@Html.DisplayNameFor(model => model.Name)</th>
    </tr>
  </thead>
  <tbody>
  @foreach (var item in Model) 
  {
    <tr>
      <td>@Html.DisplayFor(modelItem => item.Name)</td>
      <td>
        <a href="@Url.Action("Edit", new { id = item.EngineerId })">Edit</a> |
        <a href="@Url.Action("Details", new { id = item.EngineerId })">Details</a> |
        <a href="@Url.Action("Delete", new { id = item.EngineerId })">Delete</a>
      </td>
    </tr>
  }
  </tbody>
</table>
