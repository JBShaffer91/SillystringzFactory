@model Factory.Models.Engineer
@using (Html.BeginForm("Edit", "Engineers", FormMethod.Post)) 
{
  @Html.AntiForgeryToken()

  @Html.HiddenFor(model => model.EngineerId)

  <div class="form-horizontal">
    <h2>Edit</h2>
    <hr />

    <div class="form-group">
      @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
      @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
      @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
      @Html.Label("MachineId", "Machines", new { @class = "control-label col-md-2" })
      @Html.ListBox("MachineId", (MultiSelectList)ViewBag.MachineId, new { @class = "form-control" })
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Edit" class="btn btn-default" />
      </div>
    </div>
  </div>
}
